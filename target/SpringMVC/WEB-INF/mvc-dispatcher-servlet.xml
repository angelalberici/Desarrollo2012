<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/pages/</value>
		</property>
                
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

             <bean name="/lista.htm" 
		class="com.mkyong.common.controller.NotaListaController" />
                
                <bean name="/libreta.htm" 
		class="com.mkyong.common.controller.LibretaController" />
                
                 <bean name="/autenticacion.htm" 
		class="com.mkyong.common.controller.AutenticacionController" />
        
</beans>
